<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#55111111" />

            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />

            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:gravity="center" android:drawable="@android:drawable/ic_menu_camera" />
    <item android:gravity="bottom|right" android:right="-2dp" android:drawable="@drawable/ic_add" />
</layer-list>