<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/item_background" />

            <padding
                android:bottom="@dimen/add_photo_padding"
                android:left="@dimen/add_photo_padding"
                android:right="@dimen/add_photo_padding"
                android:top="@dimen/add_photo_padding" />

            <corners android:radius="@dimen/rounded_corner_radius" />
        </shape>
    </item>
    <item
        android:drawable="@android:drawable/ic_menu_camera"
        android:gravity="center" />
    <item
        android:drawable="@drawable/ic_add"
        android:gravity="bottom|right"
        android:right="@dimen/list_buttons_margin_top" />
</layer-list>