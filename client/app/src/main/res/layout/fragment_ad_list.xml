<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:background="#55111111">

        <TextView
            android:id="@+id/button_filters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_weight="0.5"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/ic_filter_list_white_36dp"
            android:gravity="center|start"
            android:text="@string/label_filters"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/button_sort_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:layout_weight="0.5"
            android:drawableEnd="@drawable/ic_sort_white_36dp"
            android:drawablePadding="4dp"
            android:gravity="center|end"
            android:text="@string/label_sort_default"
            android:textAllCaps="true"
            android:textStyle="bold" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/list"
        android:name="kwasilewski.marketplace.helper.AdFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        tools:context="kwasilewski.marketplace.fragment.AdFragment"
        tools:listitem="@layout/fragment_ad" />

</LinearLayout>