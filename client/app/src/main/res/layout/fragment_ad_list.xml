<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kwasilewski.marketplace.fragment.AdFragment">

    <LinearLayout
        android:id="@+id/container_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:background="#55111111"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/ad_list_filters"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginStart="14dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ad_list_filters_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_filter_list_white_36dp"
                android:drawablePadding="3dp"
                android:gravity="center|start"
                android:text="@string/label_filters"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ad_list_filters_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:gravity="center|start"
                android:padding="6dp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="3 Active" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ad_list_sort"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginEnd="14dp"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ad_list_sort_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:background="@drawable/rounded_corner"
                android:gravity="center|end"
                android:text="@string/label_sort_default"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_sort_white_36dp"
                android:drawablePadding="3dp"
                android:gravity="center|end" />

        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ad_list_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/fragment_ad" />

</LinearLayout>